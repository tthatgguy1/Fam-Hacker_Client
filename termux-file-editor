echo -e "\033[1;33m1\033[0m.[\033[1;31mDelete\033[0m] all the data in\033[1;33m-\033[0m[\033[1;31mNFS-T-Downloads]\033[0m."
read bxx                                                             

case $bxx in

	1) echo -e "\e[031m" "Are you sure you want to Delete all the data in NFS-T-Downloads folder(Y/n)"
	
	read xconf

	if [ "$xconf" != "${xconf#[Yy]}" ] ; then
		echo " Deleting all the data in the NFS-T-Downloads folder..."
		cd /data/data/com.termux/files/home/storage/shared/Fam-Hacker_Directory
		rm - rf *
		cd
	else
		echo "Quiting the Menu.."

	fi
	;;
esac
